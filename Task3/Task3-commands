# Уменьшение тома / до 8G
pvcreate /dev/sdb
vgcreate vg_root /dev/sdb
lvcreate -n lv_root -l +100%FREE /dev/vg_root
mkfs.ext4 /dev/vg_root/lv_root
mount /dev/vg_root/lv_root /mnt
rsync -avxHAX --progress / /mnt/

for i in /proc/ /sys/ /dev/ /run/ /boot/; do mount --bind $i /mnt/$i; done
chroot /mnt/
grub-mkconfig -o /boot/grub/grub.cfg
update-initramfs -u
exit
reboot

# После перезагрузки
lvremove /dev/ubuntu-vg/ubuntu-lv
lvcreate -n ubuntu-lv -L 8G /dev/ubuntu-vg
mkfs.ext4 /dev/ubuntu-vg/ubuntu-lv
mount /dev/ubuntu-vg/ubuntu-lv /mnt
rsync -avxHAX --progress / /mnt/

for i in /proc/ /sys/ /dev/ /run/ /boot/; do mount --bind $i /mnt/$i; done
chroot /mnt/
grub-mkconfig -o /boot/grub/grub.cfg
update-initramfs -u

# Создание тома /var в mirror
pvcreate /dev/sdc /dev/sdd
vgcreate vg_var /dev/sdc /dev/sdd
lvcreate -L 950M -m1 -n lv_var vg_var
mkfs.ext4 /dev/vg_var/lv_var
mount /dev/vg_var/lv_var /mnt
cp -aR /var/* /mnt/
mkdir /tmp/oldvar && mv /var/* /tmp/oldvar
umount /mnt
mount /dev/vg_var/lv_var /var
echo "`blkid | grep var: | awk '{print $2}'` /var ext4 defaults 0 0" >> /etc/fstab

# Очистка временного тома
lvremove /dev/vg_root/lv_root
vgremove /dev/vg_root
pvremove /dev/sdb

# Создание тома /home
lvcreate -n LogVol_Home -L 2G /dev/ubuntu-vg
mkfs.ext4 /dev/ubuntu-vg/LogVol_Home
mount /dev/ubuntu-vg/LogVol_Home /mnt/
cp -aR /home/* /mnt/
rm -rf /home/*
umount /mnt
mount /dev/ubuntu-vg/LogVol_Home /home/
echo "`blkid | grep Home | awk '{print $2}'` /home ext4 defaults 0 0" >> /etc/fstab

# Работа со снапшотами
touch /home/file{1..20}
lvcreate -L 100MB -s -n home_snap /dev/ubuntu-vg/LogVol_Home
rm -f /home/file{11..20}
umount /home
lvconvert --merge /dev/ubuntu-vg/home_snap
mount /dev/ubuntu-vg/LogVol_Home /home
